  .row
    .col-md-12
      .modal#eventModal.fade(role='dialog')
        .modal-dialog
          .modal-content
            .modal-header
              button.close(type='button' data-dismiss='modal' aria-hidden='true') x
              h4.modal-title Nýr atburður
            .modal-body
              form.form-horizontal(action='/events' method='post')
                .form-group
                  label.col-lg-3.control-label(for='title') Titill
                  .col-lg-9
                    input#title.form-control.input-lg(type='text' name='title' required)
                .form-group
                  label.col-lg-3.control-label(for='course') Áfangi
                  .col-lg-9
                    input#course.form-control.input-lg(type='text' name='course')
                .form-group
                  label.col-lg-3.control-label(for='glosLocation') Hvar finn ég glósurnar?
                  .col-lg-9
                    input#glosLocation.form-control.input-lg(type='text' name='glosLocation')
                .form-group
                  .modal-footer
                    button.btn.btn-default(type='button' data-dismiss='modal') Loka
                    button.btn.btn-material-lightgreen(type='submit') Vista atburð
